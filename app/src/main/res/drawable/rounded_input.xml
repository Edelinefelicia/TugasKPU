<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Main Shape Layer -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp" > <!-- Offset the shape to create the shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <stroke
                android:color="@color/darkgrey"
                android:width="3dp" />
        </shape>
    </item>

</layer-list>
